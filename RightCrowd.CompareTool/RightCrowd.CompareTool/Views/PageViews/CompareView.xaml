<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RightCrowd.CompareTool"
             xmlns:disNode="clr-namespace:RightCrowd.CompareTool.Models.Display.Node"
             xmlns:datNode="clr-namespace:RightCrowd.CompareTool.Models.DataModels.DataNode"
             xmlns:datField="clr-namespace:RightCrowd.CompareTool.Models.DataModels.Fields"
             xmlns:Custom="http://metro.mahapps.com/winfx/xaml/controls" x:Class="RightCrowd.CompareTool.CompareView"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100">
    <UserControl.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFF2F6B0" Offset="0"/>
            <GradientStop Color="#FFDAB575" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>
    <Grid>
        <Label x:Name="db1Label" Content="Database One" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Height="50" Width="550" FontFamily="Segoe UI Black" FontWeight="Bold" FontSize="20" Foreground="White" Background="#FF188CCA" BorderBrush="White" BorderThickness="5"/>
        <Label x:Name="db2Label" Content="Database Two" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Height="50" Width="550" FontFamily="Segoe UI Black" FontWeight="Bold" FontSize="20" Foreground="White" Background="#FF8CC63F" Margin="550,0,0,0" BorderBrush="White" BorderThickness="5"/>
        <Label x:Name="difLabel" Content="Differences" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="1100" FontFamily="Segoe UI Black" FontWeight="Bold" FontSize="15" Foreground="White" Background="#FF3C3C3C" Margin="0,50,0,0"/>
        <Label x:Name="simLabel" Content="Similarities" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="1100" FontFamily="Segoe UI Black" FontWeight="Bold" FontSize="15" Foreground="White" Background="#FF3C3C3C" Margin="0,425,0,0"/>
        <ScrollViewer  HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Left" Margin="0,80,0,0" VerticalAlignment="Top" Width="550" Height="345">
            <TreeView Background="{x:Null}" ItemsSource="{Binding Path=DB1Differences}">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type disNode:DisplayNode}" ItemsSource="{Binding Path=DataNodes}">
                        <Border BorderBrush="#FF188CCA" Background="#FF188CCA"  BorderThickness="1" CornerRadius="2" Margin="2" Padding="2" >
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock  Text="{Binding Path=Type}" FontWeight="Bold" Foreground="White"></TextBlock>
                            </StackPanel>
                        </Border>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type datNode:DataNode}" ItemsSource="{Binding Path=Fields}">
                        <Border BorderBrush="#FF188CCA" Background="#FF188CCA"  BorderThickness="1" CornerRadius="2" Margin="2" Padding="2" >
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock  Text="{Binding Path=FileName}" FontWeight="Bold" Foreground="White"></TextBlock>
                            </StackPanel>
                        </Border>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type datField:CompositeField}" ItemsSource="{Binding Path=Fields}">
                        <Border BorderBrush="#FF188CCA" Background="#FF188CCA"  BorderThickness="1" CornerRadius="2" Margin="2" Padding="2" >
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock  Text="{Binding Path=Name}" FontWeight="Bold" Foreground="White"></TextBlock>
                            </StackPanel>
                        </Border>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type datField:RawField}">
                        <StackPanel Orientation="Horizontal" >
                            <Border BorderBrush="#FF188CCA" Background="#FF188CCA"  BorderThickness="1" CornerRadius="2" Margin="2" Padding="2" >
                                <TextBlock  Text="{Binding Path=Name}" FontWeight="Bold" Foreground="White"/>
                            </Border>
                            <Border BorderBrush="#FF188CCA" Background="AliceBlue"  BorderThickness="1" CornerRadius="2" Margin="2" Padding="2" >
                                <TextBlock Text="{Binding Path=Value}" FontWeight="Bold" Foreground="Black"/>
                            </Border>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.Resources>
            </TreeView>
        </ScrollViewer>
        <ScrollViewer  HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Left" Margin="550,80,0,0" VerticalAlignment="Top" Width="550" Height="345" Custom:ScrollBarHelper.VerticalScrollBarOnLeftSide="True">
            <TreeView Background="{x:Null}" ItemsSource="{Binding Path=DB2Differences}">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type disNode:DisplayNode}" ItemsSource="{Binding Path=DataNodes}">
                        <Border BorderBrush="#FF8CC63F" Background="#FF8CC63F"  BorderThickness="1" CornerRadius="2" Margin="2" Padding="2" >
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock  Text="{Binding Path=Type}" FontWeight="Bold" Foreground="White"></TextBlock>
                            </StackPanel>
                        </Border>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type datNode:DataNode}" ItemsSource="{Binding Path=Fields}">
                        <Border BorderBrush="#FF8CC63F" Background="#FF8CC63F"  BorderThickness="1" CornerRadius="2" Margin="2" Padding="2" >
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock  Text="{Binding Path=FileName}" FontWeight="Bold" Foreground="White"></TextBlock>
                            </StackPanel>
                        </Border>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type datField:CompositeField}" ItemsSource="{Binding Path=Fields}">
                        <Border BorderBrush="#FF8CC63F" Background="#FF8CC63F"  BorderThickness="1" CornerRadius="2" Margin="2" Padding="2" >
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock  Text="{Binding Path=Name}" FontWeight="Bold" Foreground="White"></TextBlock>
                            </StackPanel>
                        </Border>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type datField:RawField}">
                        <StackPanel Orientation="Horizontal" >
                            <Border BorderBrush="#FF8CC63F" Background="#FF8CC63F"  BorderThickness="1" CornerRadius="2" Margin="2" Padding="2" >
                                <TextBlock  Text="{Binding Path=Name}" FontWeight="Bold" Foreground="White"/>
                            </Border>
                            <Border BorderBrush="#FF8CC63F" Background="AliceBlue"  BorderThickness="1" CornerRadius="2" Margin="2" Padding="2" >
                                <TextBlock Text="{Binding Path=Value}" FontWeight="Bold" Foreground="Black"/>
                            </Border>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.Resources>
            </TreeView>
        </ScrollViewer>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Left" Margin="0,455,0,0" VerticalAlignment="Top" Width="550" Height="345">
            <TreeView Background="{x:Null}" ItemsSource="{Binding Path=DB1Similarities}">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type disNode:DisplayNode}" ItemsSource="{Binding Path=DataNodes}">
                        <Border BorderBrush="#FF188CCA" Background="#FF188CCA"  BorderThickness="1" CornerRadius="2" Margin="2" Padding="2" >
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock  Text="{Binding Path=Type}" FontWeight="Bold" Foreground="White"></TextBlock>
                            </StackPanel>
                        </Border>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type datNode:DataNode}" ItemsSource="{Binding Path=Fields}">
                        <Border BorderBrush="#FF188CCA" Background="#FF188CCA"  BorderThickness="1" CornerRadius="2" Margin="2" Padding="2" >
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock  Text="{Binding Path=FileName}" FontWeight="Bold" Foreground="White"></TextBlock>
                            </StackPanel>
                        </Border>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type datField:CompositeField}" ItemsSource="{Binding Path=Fields}">
                        <Border BorderBrush="#FF188CCA" Background="#FF188CCA"  BorderThickness="1" CornerRadius="2" Margin="2" Padding="2" >
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock  Text="{Binding Path=Name}" FontWeight="Bold" Foreground="White"></TextBlock>
                            </StackPanel>
                        </Border>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type datField:RawField}">
                        <StackPanel Orientation="Horizontal" >
                            <Border BorderBrush="#FF188CCA" Background="#FF188CCA"  BorderThickness="1" CornerRadius="2" Margin="2" Padding="2" >
                                <TextBlock  Text="{Binding Path=Name}" FontWeight="Bold" Foreground="White"/>
                            </Border>
                            <Border BorderBrush="#FF188CCA" Background="AliceBlue"  BorderThickness="1" CornerRadius="2" Margin="2" Padding="2" >
                                <TextBlock Text="{Binding Path=Value}" FontWeight="Bold" Foreground="Black"/>
                            </Border>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.Resources>
            </TreeView>
        </ScrollViewer>
        <ScrollViewer  HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Left" Margin="550,455,0,0" VerticalAlignment="Top" Width="550" Height="345" Custom:ScrollBarHelper.VerticalScrollBarOnLeftSide="True">
            <TreeView Background="{x:Null}" ItemsSource="{Binding Path=DB2Similarities}">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type disNode:DisplayNode}" ItemsSource="{Binding Path=DataNodes}">
                        <Border BorderBrush="#FF8CC63F" Background="#FF8CC63F"  BorderThickness="1" CornerRadius="2" Margin="2" Padding="2" >
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock  Text="{Binding Path=Type}" FontWeight="Bold" Foreground="White"></TextBlock>
                            </StackPanel>
                        </Border>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type datNode:DataNode}" ItemsSource="{Binding Path=Fields}">
                        <Border BorderBrush="#FF8CC63F" Background="#FF8CC63F"  BorderThickness="1" CornerRadius="2" Margin="2" Padding="2" >
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock  Text="{Binding Path=FileName}" FontWeight="Bold" Foreground="White"></TextBlock>
                            </StackPanel>
                        </Border>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type datField:CompositeField}" ItemsSource="{Binding Path=Fields}">
                        <Border BorderBrush="#FF8CC63F" Background="#FF8CC63F"  BorderThickness="1" CornerRadius="2" Margin="2" Padding="2" >
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock  Text="{Binding Path=Name}" FontWeight="Bold" Foreground="White"></TextBlock>
                            </StackPanel>
                        </Border>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type datField:RawField}">
                        <StackPanel Orientation="Horizontal" >
                            <Border BorderBrush="#FF8CC63F" Background="#FF8CC63F"  BorderThickness="1" CornerRadius="2" Margin="2" Padding="2" >
                                <TextBlock  Text="{Binding Path=Name}" FontWeight="Bold" Foreground="White"/>
                            </Border>
                            <Border BorderBrush="#FF8CC63F" Background="AliceBlue"  BorderThickness="1" CornerRadius="2" Margin="2" Padding="2" >
                                <TextBlock Text="{Binding Path=Value}" FontWeight="Bold" Foreground="Black"/>
                            </Border>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.Resources>
            </TreeView>
        </ScrollViewer>
    </Grid>
</UserControl>
